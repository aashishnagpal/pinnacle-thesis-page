<div class="eui-grid__row">
  <div class="eui-grid__column eui-grid__col-size-12-of-12">
    <h4 class="join-team-form__title">{{mailChimpFormTitle}}</h4>
  </div>
</div>
<form class="mailing-form">
  <div class="eui-grid__row">
    <div class="eui-grid__column eui-grid__col-size-4-of-12 eui-grid__offset-by-2-col">
      <div class="mailing-form__input-container">
        <input class="mailing-form__text-input" type="text" placeholder="First Name" tabindex="1" required/>
      </div>
    </div>
    <div class="eui-grid__column eui-grid__col-size-4-of-12">
      <div class="mailing-form__input-container">
        <input class="mailing-form__text-input" type="text" placeholder="Last Name" tabindex="2" required/>
      </div>
    </div>
  </div>
  <div class="eui-grid__row">
    <div class="eui-grid__column eui-grid__col-size-4-of-12 eui-grid__offset-by-2-col">
      <div class="mailing-form__input-container">
        <input class="mailing-form__text-input" type="email" placeholder="Email" tabindex="3" required/>
      </div>
    </div>
    <div class="eui-grid__column eui-grid__col-size-4-of-12">
      <div class="mailing-form__input-container">
        <input class="mailing-form__submit-btn" type="submit" value="I would like to help!" tabindex="4" />
      </div>
    </div>
  </div>
</form>
